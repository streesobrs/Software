<Window x:Class="Software.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Software"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:viewModels="clr-namespace:Software.ViewModels"
        xmlns:lang="clr-namespace:Software.resources.i18n"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:ResxLocalizationProvider.DefaultAssembly="Software"
        lex:ResxLocalizationProvider.DefaultDictionary="Lang"
        mc:Ignorable="d"
        Title="MainWindow" 
        Width="900" Height="550"
        MinWidth="589" MinHeight="495"
        FontFamily="../resources/Fonts/#得意黑"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <!--上面的栏-->
        <Grid Grid.Row="0" Background="#116ECC">

            <StackPanel HorizontalAlignment="Left" Height="50" Margin="0,0" 
                        VerticalAlignment="Top" Width="50" Grid.Column="1">
                <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="AliceBlue">
                    <Ellipse.Fill>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Image Source="resources/image/cxk.png"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </StackPanel>

            <DockPanel Grid.Column="2" LastChildFill="False">

                <ui:Button DockPanel.Dock="Right" Background="Transparent" VerticalAlignment="Center" Margin="10,0" FontSize="19" Foreground="#EFE0EEF9" Content="{lex:Loc System_MainWindow_Button_About}" Click="Button_Click_Image"/>
                <ui:Button DockPanel.Dock="Right" Background="Transparent" VerticalAlignment="Center" Margin="10,0" FontSize="19" Foreground="#EFE0EEF9" Content="{lex:Loc System_MainWindow_Button_DoNotClick}" Click="Button_Click_PlayVideo"/>

            </DockPanel>

        </Grid>

        <!--下面的栏-->
        <Grid Grid.Row="1" Background="#B1D0F3"  Focusable="False">

            <DockPanel LastChildFill="True">
                <!--左侧的栏-->
                <DockPanel LastChildFill="True" Background="#CADFF6" Width="100">
                    <Button DockPanel.Dock="Bottom" Width="100" Height="30" Margin="0,5,0,10" BorderBrush="Transparent" Foreground="#ff363232"
                        Name="Button_Settings"
                        Click="Button_Click_Settings"
                        Content="{lex:Loc MainWindow_Button_Settings}"
                        ToolTip="{lex:Loc MainWindow_Button_Settings_Tip}"/>
                    <!-- 中英文切换按钮 -->
                    <ToggleButton x:Name="languageToggle" DockPanel.Dock="Bottom" Margin="0,10,0,5" Width="Auto" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center" 
              Panel.ZIndex="1"
              FocusVisualStyle="{x:Null}" 
              Foreground="#BBFFFF"
              IsChecked="False" Cursor="Hand" ToolTip="中英文切换"
              Click="languageToggle_Click">
                        <ToggleButton.Effect>
                            <BlurEffect Radius="1" />
                        </ToggleButton.Effect>
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid>
                                    <TextBlock x:Name="globeIcon" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Text="&#xE774;" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           FontFamily="Segoe MDL2 Assets" 
                           Foreground="{TemplateBinding Foreground}">
                                    </TextBlock>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <EventTrigger RoutedEvent="ButtonBase.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                Storyboard.TargetName="globeIcon"
                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                From="#BBFFFF"
                                To="Red"
                                Duration="0:0:0.2"
                                AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                    <ScrollViewer>
                        <StackPanel Width="100">
                            <!--左边菜单的选项-->
                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_Home"
                            Click="Button_Click_Home"
                            Content="{lex:Loc MainWindow_Button_Home}"
                            ToolTip="{lex:Loc MainWindow_Button_Home_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_GenshinMap"
                            Click="Button_Click_GenshinMap"
                            Content="{lex:Loc MainWindow_Button_GenshinMap}"
                            ToolTip="{lex:Loc MainWindow_Button_GenshinMap_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_SelectUP"
                            Click="Button_Click_SelectUP"
                            Content="{lex:Loc MainWindow_Button_SelectUP}"
                            ToolTip="{lex:Loc MainWindow_Button_SelectUP_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_PlayGames"
                            Click="Button_Click_PlayGames"
                            Content="{lex:Loc MainWindow_Button_PlayGames}"
                            ToolTip="{lex:Loc MainWindow_Button_PlayGames_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_GenshinRole"
                            Click="Button_Click_GenshinRole"
                            Content="{lex:Loc MainWindow_Button_GenshinRole}"
                            ToolTip="{lex:Loc MainWindow_Button_GenshinRole_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_HonkaiImpact3"
                            Click="Button_Click_HonkaiImpact3"
                            Content="{lex:Loc MainWindow_Button_HonkaiImpact3}"
                            ToolTip="{lex:Loc MainWindow_Button_HonkaiImpact3_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_StarRail"
                            Click="Button_Click_StarRail"
                            Content="{lex:Loc MainWindow_Button_StarRail}"
                            ToolTip="{lex:Loc MainWindow_Button_StarRail_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_MoveChest"
                            Click="Button_Click_MoveChest"
                            Content="{lex:Loc MainWindow_Button_MoveChest}"
                            ToolTip="{lex:Loc MainWindow_Button_MoveChest_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_Bing"
                            Click="Button_Click_Bing"
                            Content="{lex:Loc MainWindow_Button_Bing}"
                            ToolTip="{lex:Loc MainWindow_Button_Bing_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_StreePortal"
                            Click="Button_Click_StreePortal"
                            Content="{lex:Loc MainWindow_Button_StreePortal}"
                            ToolTip="{lex:Loc MainWindow_Button_StreePortal_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_Updata"
                            Click="Button_Click_Updata"
                            Content="{lex:Loc MainWindow_Button_Updata}"
                            ToolTip="{lex:Loc MainWindow_Button_Updata_Tip}"/>

                            <ui:Button Width="100" Height="30" BorderBrush="Transparent" Foreground="#ff363232"
                            Name="Button_Version"
                            Click="Button_Click_Version"
                            Content="{lex:Loc MainWindow_Button_Version}"
                            ToolTip="{lex:Loc MainWindow_Button_Version_Tip}"/>

                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>

                <Frame x:Name="contentcon" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="0"/>
                
            </DockPanel>

            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="beta_tabel">
                <Label FontSize="20" Foreground="Black"
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom" 
                       Name="LaunchCount" 
                       Content=""/>

                <Label FontSize="20" Foreground="Black"
                       Name="Test_Label"
                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                       Content="{lex:Loc MainWindow_Label_Ts}" />
            </DockPanel>

        </Grid>

    </Grid>
</Window>
