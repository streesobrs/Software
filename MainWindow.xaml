        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Software"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:viewModels="clr-namespace:Software.ViewModels"
        xmlns:resx="clr-namespace:Software.Properties"
        d:DataContext="{d:DesignInstance Type=viewModels:Weather}"
        mc:Ignorable="d"
        Title="MainWindow" 
        Width="900" Height="550"
        MinWidth="589" MinHeight="495"
        FontFamily="../resources/Fonts/#得意黑"
