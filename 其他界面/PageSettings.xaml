<Page x:Class="Software.其他界面.PageSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Software.其他界面"
      xmlns:resx="clr-namespace:Software.Properties" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontFamily="../resources/Fonts/#得意黑"
      Title="PageSettings" Loaded="Page_Loaded">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#B1D0F3" Margin="0,0">
        <StackPanel >
            <DockPanel>

                <TextBlock Text="是否开启启动计数" FontSize="21"/>
                <CheckBox DockPanel.Dock="Top" Foreground="Black"
          Name="EnableCountingCheckBox" 
          Content="启用计数" 
          Checked="EnableCountingCheckBox_Checked" 
          Unchecked="EnableCountingCheckBox_Unchecked"/>
            </DockPanel>

            <DockPanel>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontSize="16">
                 软件更新地址：
                </TextBlock>
                <TextBox Name="Update_IP_address" HorizontalAlignment="Left" TextChanged="Update_IP_address_TextChanged" Foreground="Black"/>

            </DockPanel>
            <DockPanel>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontSize="16">
                日志更新地址：
                </TextBlock>
                <TextBox Name="Update_Log_IP_address" HorizontalAlignment="Left" TextChanged="Update_Log_IP_address_TextChanged" Foreground="Black"/>
            </DockPanel>

            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                    <RadioButton Content="英文" Click="RadioButton_Click_English" Foreground="Black"/>
                    <RadioButton Content="中文" IsChecked="True" Click="RadioButton_Click_Chinese" Foreground="Black"/>
                </StackPanel>
            </DockPanel>

            <StackPanel>
                <ui:Button Foreground="Black" Click="Button_Click_Open">打开软件根目录</ui:Button>
                
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
