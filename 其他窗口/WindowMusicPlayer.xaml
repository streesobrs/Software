<Window
    x:Class="Software.其他窗口.WindowMusicPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Software.ViewModels"
    Title="音乐播放器"
    Width="1210"
    Height="700"
    d:DataContext="{d:DesignInstance Type=viewmodels:MusicPlayer}"
    Background="#2C2C2C"
    Foreground="White"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="MediaButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A5A5A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MusicProgressStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="6" />
            <Setter Property="Background" Value="#4A4A4A" />
            <Setter Property="Foreground" Value="#0078D7" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Rectangle
                                x:Name="PART_Track"
                                Fill="{TemplateBinding Background}"
                                RadiusX="3"
                                RadiusY="3" />
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="{TemplateBinding Foreground}"
                                RadiusX="3"
                                RadiusY="3" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LyricTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5,2" />
        </Style>

        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Opacity="0.3"
            ShadowDepth="3" />

        <!--  高密度卡片视图数据模板  -->
        <DataTemplate x:Key="HighDensityCardTemplate">
            <Border
                Width="198"
                Height="50"
                Margin="2"
                Background="#4A4A4A"
                CornerRadius="5"
                Effect="{StaticResource DropShadowEffect}">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Width="25"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding Index}"
                        TextAlignment="Center" />

                    <StackPanel Grid.Column="1" Margin="10,0">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding DisplayName}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Margin="0,2,0,0"
                            FontSize="12"
                            Foreground="#CCCCCC"
                            Text="{Binding Artist}"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>

                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="#CCCCCC"
                        Text="{Binding Duration, StringFormat=mm\\:ss}" />
                </Grid>
            </Border>
        </DataTemplate>

        <!--  标准卡片视图数据模板  -->
        <DataTemplate x:Key="StandardCardTemplate">
            <Border
                Width="160"
                Height="202"
                Background="#4A4A4A"
                CornerRadius="8"
                Effect="{StaticResource DropShadowEffect}">
                <StackPanel Margin="8" Orientation="Vertical">
                    <Border
                        Width="140"
                        Height="120"
                        Margin="0,0,0,8"
                        Background="#5A5A5A"
                        CornerRadius="4">
                        <Image
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{Binding AlbumCover}"
                            Stretch="UniformToFill">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="pack://application:,,,/Resources/image/default_album.png" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AlbumCover}" Value="{x:Null}">
                                            <Setter Property="Source" Value="pack://application:,,,/Resources/image/default_album.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Border>
                    <TextBlock
                        MaxHeight="36"
                        Margin="0,0,0,4"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding DisplayName}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                    <Grid
                        Width="140"
                        Margin="0,4,0,0"
                        VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="12"
                            Foreground="#CCCCCC"
                            Text="{Binding Artist}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            FontSize="12"
                            Foreground="#CCCCCC"
                            Text="{Binding Duration, StringFormat=mm\\:ss}" />
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!--  高密度卡片视图的ItemsPanel  -->
        <ItemsPanelTemplate x:Key="CardItemsPanel">
            <WrapPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>

        <!--  标准卡片视图的ItemsPanel  -->
        <ItemsPanelTemplate x:Key="StandardCardItemsPanel">
            <WrapPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>

        <!--  ListView的ScrollViewer样式，禁用水平滚动  -->
        <Style x:Key="NoHorizontalScrollListViewStyle" TargetType="ListView">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListView">
                        <ScrollViewer
                            x:Name="ScrollViewer"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <MediaElement
            x:Name="mediaElement"
            LoadedBehavior="Manual"
            UnloadedBehavior="Manual"
            Visibility="Collapsed" />

        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
            <Border
                Width="240"
                Height="240"
                Margin="0,10,0,0"
                Background="#3C3C3C"
                CornerRadius="10">
                <Image
                    x:Name="AlbumCover"
                    Source="pack://application:,,,/Resources/image/default_album.png"
                    Stretch="UniformToFill" />
            </Border>

            <TextBlock
                x:Name="musicNameTextBlock"
                Width="240"
                Height="40"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Text="未播放歌曲"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <Border
                Width="240"
                Height="120"
                Margin="0,10,0,0"
                Background="#3C3C3C"
                CornerRadius="5">
                <ScrollViewer
                    x:Name="LyricsScrollViewer"
                    HorizontalContentAlignment="Center"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="LyricsPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Foreground="{Binding Color}"
                                    Style="{StaticResource LyricTextStyle}"
                                    Text="{Binding Text}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <StackPanel Width="240" Margin="0,10,0,0">
                <Grid>
                    <ProgressBar
                        x:Name="MusicProgress"
                        Maximum="100"
                        Minimum="0"
                        Style="{StaticResource MusicProgressStyle}" />

                    <Slider
                        x:Name="ProgressSlider"
                        Background="Transparent"
                        Maximum="100"
                        Minimum="0"
                        Opacity="0"
                        Thumb.DragCompleted="ProgressSlider_DragCompleted"
                        Thumb.DragStarted="ProgressSlider_DragStarted" />
                </Grid>

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="CurrentTimeText"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        Foreground="#AAAAAA"
                        Text="00:00" />
                    <TextBlock
                        x:Name="TotalTimeText"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        FontSize="12"
                        Foreground="#AAAAAA"
                        Text="00:00" />
                </Grid>
            </StackPanel>

            <StackPanel
                Margin="0,15,0,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="prevButton"
                    Margin="0,0,15,0"
                    Click="PrevButton_Click"
                    Content="&#x23EA;"
                    Style="{StaticResource MediaButtonStyle}" />
                <Button
                    x:Name="playPauseButton"
                    Width="50"
                    Height="50"
                    Click="PlayPauseButton_Click"
                    Content="播放"
                    Style="{StaticResource MediaButtonStyle}" />
                <Button
                    x:Name="nextButton"
                    Margin="15,0,0,0"
                    Click="NextButton_Click"
                    Content="&#x23E9;"
                    Style="{StaticResource MediaButtonStyle}" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="18"
                Text="播放列表" />

            <ListView
                x:Name="MusicList"
                Grid.Row="1"
                Margin="0,0,0,10"
                Background="#3C3C3C"
                BorderThickness="0"
                ItemTemplate="{StaticResource StandardCardTemplate}"
                ItemsPanel="{StaticResource StandardCardItemsPanel}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionChanged="MusicList_SelectionChanged">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D7" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0" Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#AAAAAA"
                        Text="音量" />
                    <Slider
                        x:Name="VolumeSlider"
                        Width="100"
                        LargeChange="0.1"
                        Maximum="1"
                        Minimum="0"
                        Orientation="Horizontal"
                        SmallChange="0.05"
                        ToolTip="调整音量"
                        Value="{Binding MusicPlayer.Volume, Mode=TwoWay}" />
                </StackPanel>

                <Button
                    x:Name="playModeButton"
                    Width="auto"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#3C3C3C"
                    BorderThickness="0"
                    Click="PlayModeButton_Click"
                    Content="随机模式"
                    Foreground="White" />

                <Button
                    x:Name="loopModeButton"
                    Width="auto"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#3C3C3C"
                    BorderThickness="0"
                    Click="LoopModeButton_Click"
                    Content="循环模式: 无"
                    Foreground="White" />

                <Button
                    x:Name="refreshButton"
                    Width="auto"
                    Height="30"
                    Background="#3C3C3C"
                    BorderThickness="0"
                    Click="RefreshButton_Click"
                    Content="刷新列表"
                    Foreground="White" />
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Margin="0,15,0,0"
                Orientation="Horizontal">
                <Button
                    Width="auto"
                    Height="35"
                    Background="#0078D7"
                    BorderThickness="0"
                    Click="AddMusicButton_Click"
                    Content="添加音乐"
                    Foreground="White" />

                <Button
                    Width="auto"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="#0078D7"
                    BorderThickness="0"
                    Content="打开音乐文件夹"
                    Foreground="White" />

                <Button
                    x:Name="CardButton"
                    Width="auto"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="#0078D7"
                    BorderThickness="0"
                    Click="SwitchLayout_Click"
                    Content="卡片视图"
                    Foreground="White"
                    Tag="Card" />
                <Button
                    x:Name="DenseCardButton"
                    Width="auto"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="#0078D7"
                    BorderThickness="0"
                    Click="SwitchLayout_Click"
                    Content="高密度卡片"
                    Foreground="White"
                    Tag="DenseCard" />
                <Button
                    x:Name="StatsButton"
                    Width="auto"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="#0078D7"
                    BorderThickness="0"
                    Click="ShowStatsButton_Click"
                    Content="播放统计"
                    Foreground="White"
                    Tag="StatsCard" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>