<Window
    x:Class="Software.其他窗口.WindowUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Software.其他窗口"
    Title="软件更新"
    Width="800"
    Height="480"
    MinWidth="750"
    MinHeight="350"
    Background="#E0F7FA">
    <Window.Resources>
        <!--  进度条宽度转换器（未使用，保留扩展能力）  -->
        <local:ProgressBarWidthConverter x:Key="ProgressBarWidthConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="TopGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#0277BD"
                        Text="有可用更新" />

                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock
                            Width="80"
                            FontWeight="Bold"
                            Foreground="#0277BD"
                            Text="当前版本:" />
                        <TextBlock x:Name="CurrentVersion" Foreground="#0277BD" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock
                            Width="80"
                            FontWeight="Bold"
                            Foreground="#0277BD"
                            Text="更新版本:" />
                        <TextBlock x:Name="VersionInfo" Foreground="#0277BD" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock
                            Width="80"
                            FontWeight="Bold"
                            Foreground="#0277BD"
                            Text="下载大小:" />
                        <TextBlock x:Name="DownloadSize" Foreground="#0277BD" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            FontWeight="Bold"
                            Foreground="#0277BD"
                            Text="更新发布时间:" />
                        <TextBlock x:Name="LastUpdate" Foreground="#0277BD" />
                    </StackPanel>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#0277BD"
                        Text="选择更新方式:" />
                    <ComboBox
                        x:Name="UpdateModeComboBox"
                        Margin="0,0,0,5"
                        Foreground="#0277BD"
                        SelectionChanged="UpdateModeComboBox_SelectionChanged" />

                    <TextBlock
                        x:Name="IncrementalVersionHint"
                        Height="18"
                        Margin="5,0,0,5"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#D32F2F"
                        Visibility="Collapsed" />
                </StackPanel>
            </Border>

            <Border
                Grid.Column="1"
                Width="1"
                Margin="5,0"
                Background="#B3E5FC" />

            <Border Grid.Column="2" Margin="10">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#0277BD"
                        Text="更新说明" />
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            x:Name="ReleaseNotes"
                            Foreground="#0277BD"
                            Text="更新日志"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="StageDescriptionText"
                Grid.Row="0"
                Margin="0,5,0,0"
                FontSize="14"
                FontWeight="Bold"
                Foreground="#0277BD"
                Text="当前阶段: 检查更新" />

            <Grid Grid.Row="1" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="主进度:" />
                <ProgressBar
                    x:Name="MainProgressBar"
                    Grid.Column="1"
                    Height="25"
                    Background="#B3E5FC"
                    Foreground="#0277BD"
                    Maximum="100"
                    Value="0" />
                <TextBlock
                    x:Name="MainProgressPercentage"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="0%" />
            </Grid>

            <Grid Grid.Row="2" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="子进度:" />
                <ProgressBar
                    x:Name="SubProgressBar"
                    Grid.Column="1"
                    Height="25"
                    Background="#B3E5FC"
                    Foreground="#0277BD"
                    Maximum="100"
                    Value="0" />
                <TextBlock
                    x:Name="SubProgressPercentage"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="0%" />
            </Grid>

            <StackPanel
                Grid.Row="3"
                Margin="0,5,0,5"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <TextBlock
                    x:Name="DownloadProgress"
                    Width="140"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="0 MB / 0 MB" />
                <TextBlock
                    x:Name="DownloadSpeed"
                    Width="140"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="下载速度: 0 MB/s" />
                <TextBlock
                    x:Name="StatusTextBlock"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#0277BD"
                    Text="状态: 等待中..." />
            </StackPanel>

            <StackPanel
                Grid.Row="4"
                Margin="0,5,0,5"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox
                    x:Name="DeletePackageAfterUpdate"
                    Content="更新完成后删除安装包"
                    Foreground="#0277BD"
                    IsChecked="True" />
            </StackPanel>

            <StackPanel
                Grid.Row="5"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#0288D1"
                    Click="StartUpdate_Click"
                    Content="更新"
                    FontWeight="Bold"
                    Foreground="White" />
                <Button
                    Width="100"
                    Height="35"
                    Background="#0288D1"
                    Click="Close_Click"
                    Content="关闭"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>